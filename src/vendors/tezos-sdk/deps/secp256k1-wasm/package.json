{
  "name": "secp256k1-js",
  "version": "1.0.4",
  "main": "src/secp256k1.js",
  "license": "MIT",
  "scripts": {
    "build:emscripten": "docker run -u $(id -u) --rm -v $(pwd)/src:/src trzeci/emscripten-slim ./build.sh",
    "build:app": "cp src/secp256k1.wasm src/secp256k1.js .",
    "build": "npm run build:emscripten && npm run build:app",
    "lint-fix": "eslint src/secp256k1_stubs.js test/test_ml.js test/test.js --fix",
    "lint": "eslint src/secp256k1_stubs.js test/test_ml.js test/test.js",
    "test": "mocha"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "mocha": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/tezos/tezos.git",
    "directory": "vendors/ocaml-secp256k1"
  },
  "files": [ "src/secp256k1.wasm", "src/secp256k1.js" ],
  "eslintConfig": {
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
       "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "camelcase": "off",
      "no-underscore-dangle": "off",
      "no-unused-vars": "warn",
      "indent": ["error", 2]
    }
  }
}
